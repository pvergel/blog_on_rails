<div id = 'container'>

<div id = 'front'>
<img src = 'http://compellingparade.com/wp-content/uploads/2012/04/derailed_train.jpg' width='250px' height='200px'>
</div>
<div id = 'index_list'>
<h1>Post Index</h1>
<%= link_to 'New post', new_post_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th> Picture </th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 
<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.text %></td>
    <td> <img src = '<%= post.picture %>' width="50px" height="50px"> </td>
    <td><%= link_to 'Show', post_path(post) %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post_path(post),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
</div>
</div>